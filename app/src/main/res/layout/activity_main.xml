<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davies.initsng.MainActivity">

    <EditText
        android:id="@+id/loguser"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_above="@+id/logpassword"
        android:layout_alignStart="@+id/logpassword"
        android:layout_marginBottom="39dp" />

    <EditText
        android:id="@+id/logpassword"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="164dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/loggerin" />

    <Button
        android:id="@+id/loggerin"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loguser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:text="Login"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="381dp" />

</RelativeLayout>

